<%- include('../partials/header.ejs'); %>
    <%- include('../partials/navbar.ejs') %>
        <h1>
            <%= title %>
        </h1>
        <p>Current Time and Location here: <%= new Date().toString() %>
        </p>

        <% if(post.published){ %>
            <h3>
                <%= post.title %>
            </h3>
            <p>
                <%= post.body %>
            </p>
            <% } else { %>
                <p>Post not yet published</p>
                <% } %>

                    <ul>
                        <% if(posts.length){ %>
                            <% for(let p of posts){ %>
                                <li>
                                    <%= p.title %> by <%= p.author %>
                                </li>
                                <% } %>
                                    <% }else{ %>
                                        <li>There is no post available</li>
                                        <% } %>
                    </ul>

                    <%- include('../partials/footer.ejs');%>